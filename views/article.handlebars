<h1>{{post.title}}</h1>
<p>{{post.contents}}</p>

<div>
  <small>Posted by: {{post.user.username}} at {{post.created_at_formatted}}</small>
</div>

<hr>

{{#each post.comments}}
<div>
  <p>{{this.contents}}</p>
  <small>Comment by: {{this.user.username}} at {{this.created_at_formatted}}</small>
</div>
<br>
{{/each}}

<form id="add-comment-form">
  <button id="add-comment-button" type="button">Add Comment</button>
  <div id="new-comment-form" style="display: none;">
    <label for="comment-contents">Comment:</label><br>
    <input type="hidden" name="user_id" value="{{user_id}}">
    <input type="hidden" name="post_id" value="{{post.id}}">
    <textarea id="comment-contents" name="contents"></textarea><br>
    <button id="submit-comment-button" type="submit">Submit</button>
  </div>
</form>

<script src="/js/article.js"></script>